<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fitsSystemWindows="true"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textColor="#00FF00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Bell Sound Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_section_bell"
            android:textColor="#00AA00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333355"
            android:layout_marginBottom="16dp" />

        <!-- Sound Enabled -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sound_enabled"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sound_enabled_desc"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchSoundEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Bell Sound Selection -->
        <LinearLayout
            android:id="@+id/bellSoundContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_bell_sound"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerBellSound"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/retro_spinner"
                android:popupBackground="#2A2A3E" />

            <TextView
                android:id="@+id/textBellDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#888888"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Bell Volume Slider -->
        <LinearLayout
            android:id="@+id/bellVolumeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_bell_volume"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <SeekBar
                    android:id="@+id/seekBarBellVolume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="5"
                    android:progressTint="#FFFFFF"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/textVolumePercent"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Test Sound Button -->
        <Button
            android:id="@+id/btnTestSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_test_sound"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333355"
            android:layout_marginBottom="24dp" />

        <!-- Vibration Enabled -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_vibration_enabled"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_vibration_enabled_desc"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchVibrationEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Display Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_section_display"
            android:textColor="#00AA00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333355"
            android:layout_marginBottom="16dp" />

        <!-- Screen Orientation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_orientation"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioPortrait"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/orientation_portrait"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#00FF00" />

                <RadioButton
                    android:id="@+id/radioLandscape"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/orientation_landscape"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#00FF00" />

            </RadioGroup>
        </LinearLayout>

        <!-- Data Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_section_data"
            android:textColor="#00AA00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333355"
            android:layout_marginBottom="16dp" />

        <!-- Download Folder -->
        <Button
            android:id="@+id/btnDownloadFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_download_folder"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333355"
            android:layout_marginBottom="8dp" />

        <!-- Export BBS List -->
        <Button
            android:id="@+id/btnExportList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_export_list"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333355"
            android:layout_marginBottom="8dp" />

        <!-- Import BBS List -->
        <Button
            android:id="@+id/btnImportList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_import_list"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333355"
            android:layout_marginBottom="24dp" />

        <!-- Exit -->
        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333355"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
