<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer bezel - lighter gray monitor frame -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5A5A6A" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Bezel highlight (top/left edge for 3D effect) -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#7A7A8A" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Bezel shadow (inner edge) -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#4A4A5A" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Inner screen bezel - slightly inset dark border -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#2A2A3A" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Screen area - the actual display with green phosphor glow -->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A0A14" />
            <corners android:radius="2dp" />
            <stroke
                android:width="1dp"
                android:color="#006600" />
        </shape>
    </item>

</layer-list>
