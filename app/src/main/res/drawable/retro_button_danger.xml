<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/term_light_red" />
            <stroke android:width="2dp" android:color="@color/term_light_red" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#200A0A" />
            <stroke android:width="2dp" android:color="@color/term_red" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>
