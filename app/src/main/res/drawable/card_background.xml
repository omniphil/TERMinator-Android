<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow/glow effect -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    <!-- Card background -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#1A2535" />
            <stroke
                android:width="1dp"
                android:color="#2A3545" />
        </shape>
    </item>
</layer-list>
