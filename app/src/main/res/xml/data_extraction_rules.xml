<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+) backup.
    Excludes connection preferences from cloud backup for privacy.
    Local device-to-device transfer is still allowed.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude saved connections from cloud backup -->
        <exclude domain="sharedpref" path="connections.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow all data for device-to-device transfer -->
        <include domain="sharedpref" path="."/>
    </device-transfer>
</data-extraction-rules>
